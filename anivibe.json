{
    "name": "HiAnime",
    "version": "1.0.0",
    "author": {
        "name": "sobet",
        "website": "https://google.com"
    },
    "iconURL": "https://raw.githubusercontent.com/bshar1865/MFS/refs/heads/main/assets/hianime.jpg",
    "stream": "HLS",
    "language": "EN",
    "extractor": "dub-sub",
    "module": [
        {
            "search": {
                "url": "https://hianime.to/search.html",
                "parameter": "keyword",
                "documentSelector": "div.anime-list article",
                "title": "div.title a",
                "image": {
                    "url": "img",
                    "attribute": "src"
                },
                "href": "div.title a"
            },
            "featured": {
                "url": "https://hianime.to/latest",
                "documentSelector": "div.anime-list article",
                "title": "div.title a",
                "image": {
                    "url": "img",
                    "attribute": "src"
                },
                "href": "div.title a"
            },
            "details": {
                "baseURL": "https://hianime.to",
                "aliases": {
                    "selector": "div.anime-title h1",
                    "attribute": "text"
                },
                "synopsis": "div.description",
                "airdate": "div.anime-meta span:contains(Aired) + span",
                "stars": "div.anime-meta span:contains(Rating) + span"
            },
            "episodes": {
                "selector": "div.episode-list ul li a",
                "order": "reversed",
                "pattern": ""
            }
        }
    ]
}
